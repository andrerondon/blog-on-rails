
<h1 class='shadow-sm p-3 mb-5 bg-white rounded overflow-wrap'>posts Page</h1>

<div class='row'>
  <div class='col-2'>
  </div>

  <div class='col-10'>
    <% @posts.each do |post| %>
    <%# if you pass a instance to link_to it will create the href='/questions/:id' %>
   
      <%= link_to post do %>
        <li class='list-group-item'>
            <h1>
                <span class='badge badge-pill badge-info'>
                    <%= post.id %>
                </span>
                    <%= post.title %>
            </h1>
    
            <p><%= post.body %>          created at: <%= post.created_at %></p>
        </li>
      <% end %>
    <% end %>

    <%# link_to just creates a `a tag` with the correct href. the below is equivalent to the above code %>
    <% if false %>
      <% @posts.each do |post| %>
        <a href="/posts/<%= post.id %>">
          <li class='list-group-item'>
            <p><%= post.id %> <%= post.title%></p>
          </li>
        </a>
      <% end %>
    <% end %>
  </div>
</div>